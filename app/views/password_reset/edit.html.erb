<div class="d-flex flex-column justify-content-center align-items-center vh-100 text-center">
    <h2 class="mb-4 fw-bold">Reset Your Password</h2>


    <div class="card p-4 shadow-lg" style="max-width: 400px; width: 100%;">
        <%= form_with model: @user, url: password_reset_edit_path(token: params[:token]), class: "needs-validation", data: { turbo: false } do |form| %>

        <% if @user.errors.any? %>
        <div class="alert alert-danger">
            <ul>
                <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
                <% end %>
            </ul>
        </div>
        <% end %>


        <div class="mb-3">
            <%= form.label :password, class: "form-label" %>
            <%= form.password_field :password, class: "form-control", placeholder: "Enter password", required: true %>
        </div>

        <div class="mb-3">
            <%= form.label :password_confirmation, class: "form-label" %>
            <%= form.password_field :password_confirmation, class: "form-control", placeholder: "Confirm password", required: true %>
        </div>

        <div class="d-grid">
            <%= form.submit "Reset Password", class: "btn text-white fw-semibold", style: "background-color: #4C75A3;" %>
        </div>

        <% end %>
    </div>
</div>